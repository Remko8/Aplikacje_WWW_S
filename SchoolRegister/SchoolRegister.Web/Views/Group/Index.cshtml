@model IEnumerable<SchoolRegister.ViewModels.VMs.GroupVm>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Groups"];
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="AddOrEditGroup">@Localizer["CreateNew"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Localizer[@Html.DisplayNameFor(model => model.Name)]
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink(Localizer["Edit"].Value, "AddOrEditGroup", new { id = item.Id }) |
                    @Html.ActionLink(Localizer["Details"].Value, "Details", new { id = item.Id }) |
                </td>
            </tr>
        }
    </tbody>
</table>
