@model SchoolRegister.ViewModels.DTOs.AttachDetachStudentToGroupDto
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer[$"{ViewBag.ActionType}"];
    ViewBag.PostAction = $"{ViewBag.ActionType}StudentToGroup";
}

    <h2>@ViewData["Title"] @Localizer["StudentToGroup"]</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="@ViewBag.PostAction">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">@Localizer["Student"]</label>
                <select asp-for="StudentId" class="form-control" asp-items="ViewBag.SubjectList"></select>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@Localizer["Group"]</label>
                <select asp-for="GroupId" class="form-control" asp-items="ViewBag.GroupList"></select>
                <span asp-validation-for="GroupId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@ViewBag.ActionType" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Localizer["BackToList"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
